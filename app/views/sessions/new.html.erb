<% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li style="color:red;"><%= error %></li>
        <% end %>
      </ul>
<% end %>
<% if flash[:notice] %> 
  <% flash.each do |name,msg| %>
    <p style="color:green;"><%= msg %></p>
  <% end %>
<% end %>

<%= form_with(scope: :session, url: login_path) do |form| %>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email ,placeholder: "Enter Your email"%>
  
  
    <%= form.label :password,"Password", style: "display: block" %>
    <%= form.password_field :password,placeholder: "Enter Your Password"%>

    <%= form.submit "Log in"%>
<%end%>