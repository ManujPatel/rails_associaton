<% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li style="color:red;"><%= error %></li>
        <% end %>
      </ul>
<% end %>

<%= form_with(model: @enrollment, local:true) do |form| %>
    <%= form.label :event_id %><br>
    <%= form.select :event_id, Event.all.map { |t| [t.name, t.id] } %>

    <% if logged_in?%>
        <% @enrollment.user_id = current_user.id %>
        <%= form.label :user_id,"User Id", style: "display: block"%>
        <%= @enrollment.user_id%><br>
    <%end%>

    <%= form.submit %>
<% end %>
